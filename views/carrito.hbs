<style>
    .title_box {
        text-align: center;
        margin-top: 45px;
        margin-bottom: 45px;
    }

    .box {
        display: flex;
        align-content: center;
        justify-content: space-around;
    }

    .tabla {
        width: 50%;
    }

    .info {
        text-align: center;
    }

</style>


<div class="title_box">
    <h1>Carrito</h1>
    <p>Carrito del usuario @{{user.username}}</p>
</div>

<div class="container box">
    <div class="tabla">
        <table class="table table-hover" style="text-align:center;">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Nombre Producto</th>
                    <th scope="col">Precio</th>
                    <th scope="col">Eliminar</th>
                </tr>
            </thead>
            <tbody>
                {{#each carrito.productos}}
                    <tr>
                        <th scope="row">{{@index}}</th>
                        <td>{{nombre}}</td>
                        <td>{{precio}}</td>
                        <td><a href="/carrito/deleteProduct/{{id}}" style="color:red"><i class="fa fa-times"></i></a></td>
                    </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
    <div class="info">
        <h1>TOTAL: $ {{carrito.total}}</h1>
        <a href="/carrito/comprar" class="btn btn-success">CONFIRMAR COMPRAR</a>
    </div>
</div>